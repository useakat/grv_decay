#!/bin/bash

depth=1
t=`find ./par_* -maxdepth $depth -name "bjob*" |wc -l`
r=`find ./par_* -maxdepth $depth -name "run.bjob*" |wc -l`
w=`find ./par_* -maxdepth $depth -name "wait.bjob*" |wc -l`
d=`find ./par_* -maxdepth $depth -name "done.bjob*" |wc -l`

echo "waiting while finishing jobs on cluster"
while [[  $d -lt $t  ]]; do    
    echo $w $r $d $t
    rm -f ../status
    echo $w $r $d $t > ../status
    sleep 10
    t=`find ./par_* -maxdepth $depth -name "bjob*" |wc -l`
    r=`find ./par_* -maxdepth $depth -name "run.bjob*" |wc -l`
    w=`find ./par_* -maxdepth $depth -name "wait.bjob*" |wc -l`
    d=`find ./par_* -maxdepth $depth -name "done.bjob*" |wc -l`
done
echo $w $r $d $t

sleep 20